<div class="container mt-5">
  <div class="row ">
  <% @movies.each.with_index(@movies.offset_value + 1) do |movie,count|%>
    <div class="col-12 col-md-6 col-lg-4 mb-4">
      <div class="card border-dark h-100">
        <div class="embed-responsive embed-responsive-16by9">
          <iframe width="560" height="315" class="embed-responsive-item" src="<%= movie.url %>"></iframe>
        </div>
        <div class="card-body">
          <p>
            <% if movie.watched_movie_by?(current_user) %>
              <%= link_to '読破済みを解除', movie_watched_movies_path(movie), class: 'btn btn-primary btn-block', method: :delete, remote: true %>
            <% else %>
              <%= link_to '読破済みにする', movie_watched_movies_path(movie), class: 'btn btn-secondary btn-block', method: :post, remote: true %>
            <% end %>
          </p>
          <h6 class="card-title">Lv.<%= count %> : <%= movie.title %></h6>
          <p class="card-text">【<%= movie.genre %>】</p>
        </div>
      </div>
    </div>
  <%end%>
  </div>
  <%= paginate @movies %>
</div>
