<div class="container">
  <div class="text-center m-5">
    <h2>進捗管理</h2>
  </div>
  
  <div>
    <h4>テキスト教材 読破済み</h4>
  </div>
 
 <div class="mt-3">
    Basic  (<%=@genreCount[:userGenre]["Basic"] ||= 0%>/<%=@genreCount[:allGenre]["Basic"] ||= 0%>)
    <div class="progress" style="height: 25px;">
      <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuemin="0" aria-valuemax="100" style="width:<%=( @genreCount[:userGenre]["Basic"]/@genreCount[:allGenre]["Basic"].to_f*100).round(0)%>%">
        <%=( @genreCount[:userGenre]["Basic"]/@genreCount[:allGenre]["Basic"].to_f*100).round(0)%>%
      </div>
    </div>
  </div> 

 <div class="mt-3">
    Git  (<%=@genreCount[:userGenre]["Git"] ||= 0%>/<%=@genreCount[:allGenre]["Git"] ||= 0%>)
    <div class="progress" style="height: 25px;">
      <div class="progress-bar progress-bar-striped bg-dark" role="progressbar" aria-valuemin="0" aria-valuemax="100" style="width:<%=( @genreCount[:userGenre]["Git"]/@genreCount[:allGenre]["Git"].to_f*100).round(0)%>%">
          <%=( @genreCount[:userGenre]["Git"]/@genreCount[:allGenre]["Git"].to_f*100).round(0)%>%
      </div>
    </div>
  </div>


 <div class="mt-3">
    Ruby  (<%=@genreCount[:userGenre]["Ruby"] ||= 0%>/<%=@genreCount[:allGenre]["Ruby"] ||= 0%>)
    <div class="progress" style="height: 25px;">
      <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" aria-valuemin="0" aria-valuemax="100" style="width:<%=( @genreCount[:userGenre]["Ruby"]/@genreCount[:allGenre]["Ruby"].to_f*100).round(0)%>%">
        <%=( @genreCount[:userGenre]["Ruby"]/@genreCount[:allGenre]["Ruby"].to_f*100).round(0)%>%
      </div>
    </div>
  </div>

  <div class="mt-3">
    Ruby on Rails  (<%=@genreCount[:userGenre]["Ruby on Rails"] ||= 0%>/<%=@genreCount[:allGenre]["Ruby on Rails"] ||= 0%>)
    <div class="progress" style="height: 25px;">
      <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" aria-valuemin="0" aria-valuemax="100" style="width:<%=( @genreCount[:userGenre]["Ruby on Rails"]/@genreCount[:allGenre]["Ruby on Rails"].to_f*100).round(0)%>%">
        <%=( @genreCount[:userGenre]["Ruby on Rails"]/@genreCount[:allGenre]["Ruby on Rails"].to_f*100).round(0)%>%
