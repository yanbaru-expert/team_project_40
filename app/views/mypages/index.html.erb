<div class="container">
  <div class="text-center m-5">
    <h2>進捗管理</h2>
  </div>
  
  <div>
    <h4>テキスト教材 読破済み</h4>
  </div>

 <div class="mt-3">
    Basic  (<%=@genreCount[:userBasic]%>/<%=@genreCount[:allBasic]%>)
    <div class="progress" style="height: 25px;">
      <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuemin="0" aria-valuemax="100" style="width:<%=( @genreCount[:userBasic]/@genreCount[:allBasic].to_f*100).round(0)%>%">
        <%=( @genreCount[:userBasic]/@genreCount[:allBasic].to_f*100).round(0)%>%
      </div>
    </div>
  </div>

 <div class="mt-3">
    Git  (<%=@genreCount[:userGit]%>/<%=@genreCount[:allGit]%>)
    <div class="progress" style="height: 25px;">
      <div class="progress-bar progress-bar-striped bg-dark" role="progressbar" aria-valuemin="0" aria-valuemax="100" style="width:<%=( @genreCount[:userGit]/@genreCount[:allGit].to_f*100).round(0)%>%">
          <%=( @genreCount[:userGit]/@genreCount[:allGit].to_f*100).round(0)%>%
      </div>
    </div>
  </div>

  <div class="mt-3">
    Ruby  (<%=@genreCount[:userRuby]%>/<%=@genreCount[:allRuby]%>)
    <div class="progress" style="height: 25px;">
      <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" aria-valuemin="0" aria-valuemax="100" style="width:<%=( @genreCount[:userRuby]/@genreCount[:allRuby].to_f*100).round(0)%>%">
        <%=( @genreCount[:userRuby]/@genreCount[:allRuby].to_f*100).round(0)%>%
      </div>
    </div>
  </div>

  <div class="mt-3">
    Ruby on Rails  (<%=@genreCount[:userRails]%>/<%=@genreCount[:allRails]%>)
    <div class="progress" style="height: 25px;">
      <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" aria-valuemin="0" aria-valuemax="100" style="width:<%=( @genreCount[:userRails]/@genreCount[:allRails].to_f*100).round(0)%>%">
        <%=( @genreCount[:userRails]/@genreCount[:allRails].to_f*100).round(0)%>%
      </div>
    </div>
  </div>    

</div>