<h1><%= @text.title %></h1>

<%= render "movie" if @movies.present? %>

<p>
  <%= markdown(@text.content) %>
</p>
<div id="text-<%= @text.id %>" class="mb-4">
  <% if @text.read_by?(current_user) %>
    <%= render "read", text: @text %>
  <% else %>
    <%= render "unread", text: @text %>
  <% end %>
</div> 